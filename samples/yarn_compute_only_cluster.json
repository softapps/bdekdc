{
  "externalHDFS": "hdfs://hostname-of-namenode:8020",
  "nodeGroups":[
    {
      "name": "master",
      "roles": [
        "hadoop_resourcemanager"
      ],
      "instanceNum": 1,
      "cpuNum": 2,
      "memCapacityMB": 7500,
      "storage": {
        "type": "SHARED",
        "sizeGB": 50
      },
      "haFlag": "on"
    },
    {
      "name": "worker",
      "roles": [
        "hadoop_nodemanager"
      ],
      "instanceNum": 3,
      "cpuNum": 2,
      "memCapacityMB": 7500,
      "storage": {
        "type": "LOCAL",
        "sizeGB": 20
      }
    },
    {
      "name": "client",
      "roles": [
        "hadoop_client",
        "hive",
        "hive_server",
        "pig"
      ],
      "instanceNum": 1,
      "cpuNum": 1,
      "memCapacityMB": 3748,
      "storage": {
        "type": "SHARED",
        "sizeGB": 50
      }
    }
  ],
  // we suggest running convert-hadoop-conf.rb to generate "configuration" section and paste the output here
